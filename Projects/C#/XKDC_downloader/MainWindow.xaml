<Window x:Class="XKDC_downloader.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:XKDC_downloader"
        mc:Ignorable="d"
        Title="MainWindow" Height="600" Width="800">
    <Grid>
        <Label x:Name="labelTitle" Content="XKCD viewer" Margin="178,10,178,0" VerticalAlignment="Top" Height="54" FontSize="32" HorizontalContentAlignment="Center" VerticalContentAlignment="Center"/>
        <Border BorderThickness="3" BorderBrush="AliceBlue" Margin="100,84,97,136">
            <Image x:Name="imgComic" Margin="1,1,1,1"/>
        </Border>
        <Button x:Name="btn_save_all"   Content="Save all"  Margin="100,465,585,64" FontSize="20" Click="OnSaveAll"/>
        <Button x:Name="btn_prev"       Content="Previous"  Margin="251,465,434,64" FontSize="20" Click="OnPrevious"/>
        <Button x:Name="btn_next"       Content="Next"      Margin="433,465,252,64" FontSize="20" Click="OnNext"/>
        <Button x:Name="btn_save_1"     Content="Save 1"    Margin="588,465,97,64"  FontSize="20" Click="OnSaveOne"/>

    </Grid>
</Window>
